/*
 * Nextflow configuration for SCRIBE pipeline
 */

process {
  executor = 'local'
  errorStrategy = 'retry'
  maxRetries = 1

  // Updated memory allocations
  withName:run_scribe {
    time = '24h'
    memory = '13 GB'   // lowered to safely fit in your system RAM
  }

  withName:convert_h5ad_to_scribe {
    memory = '4 GB'    // lighter for conversion step
  }

  withName:aggregate_edges {
    memory = '2 GB'
  }
}

timeline {
  enabled = true
}

trace {
  enabled = true
}

report {
  enabled = true
}

